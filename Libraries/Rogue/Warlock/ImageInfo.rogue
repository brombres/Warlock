library Warlock

class ImageInfo( texture_index:Int, bounds:Box ) [compound]
  METHODS
    method texture( &mipmaps=true )->Texture
      if local texture_filepath = Warlock.find_asset( AssetManager.texture_filepaths[texture_index] )
        return Texture( Texture(texture_filepath,&=mipmaps), bounds )
      else
        return Texture()
      endIf
endClass
