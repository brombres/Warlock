library Warlock

class Window : Display
  AUTO_ID

  PROPERTIES
    title  : String
    width  : Int
    height : Int

  METHODS
    method init( title, width, height )
      if (Framework.create_window(this))
        Warlock.add_window( this )
        Renderer.configure_window( this )
      endIf

    method render
      Display = this
      prior.render

endClass

