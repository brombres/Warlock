library Warlock

class Display [singleton]
  PROPERTIES
    state = DisplayState()

  METHODS
    method draw
      on_draw
      on_end_draw

    method on_draw
      #trace Renderer.uses_normalized_depth

    method on_end_draw

    method on_end_update

    method on_update

    method render
      state = state.updated || DisplayState()
      state.update
      state.draw

    method update
      on_update
      on_end_update

endClass
