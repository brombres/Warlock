module Warlock

class Vertex( x:Real32, y:Real32, z:Real32, color:Int32, u:Real32, v:Real32, data:Int32 ) [compound]
  DEFINITIONS
    PROPERTY_COUNT = 7
    COLOR_OFFSET   = 3

  GLOBAL METHODS
    method create( xy:XY, color:Color )->Vertex
      return Vertex( xy.x, xy.y, 0, color.argb, 0, 0, 0 )

    method create( xy:XY, color:Color, uv:XY )->Vertex
      return Vertex( xy.x, xy.y, 0, color.argb, uv.x, uv.y, 0 )
endClass
