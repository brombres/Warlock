module Warlock [api]

uses Geometry [export]
uses Graphics [export]

$include CmdData
$include RenderCmd
$include Renderer
$include Vertex

class Warlock [essential singleton]
  PROPERTIES
  METHODS
    method init
      local d1 = CmdData(3)
      local d2 = CmdData(4.5)
      println "Hello Warlock!!"
