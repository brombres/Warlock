#{
class DrawableQuad(
    quad:Quad<<XYZW>>,
    colors=Colors(Color.WHITE):Colors,
    texture=null:Texture,
    uv=Quad():Quad,
    render_mode=null:RenderMode,
    shader=null:Shader ) [compound]

  METHODS
    method draw
      Display.draw( this )

    method fill
      Display.fill( this )
endClass
}#

